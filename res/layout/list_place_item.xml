<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content" android:layout_height="wrap_content"
	android:orientation="horizontal">

	<ImageView android:id="@+id/img" android:layout_width="wrap_content"
		android:layout_height="wrap_content" />
	<LinearLayout android:orientation="vertical"
		android:layout_width="wrap_content" android:layout_height="wrap_content">
		<TextView android:id="@+id/BigText" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:textColor="#FFFFFFFF"
			android:textSize="30px" />
		<TextView android:id="@+id/LittleText" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:textColor="#FFFFFFFF"
			android:textSize="15px" />
	</LinearLayout>

</LinearLayout> 