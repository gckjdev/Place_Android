<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content" android:layout_height="wrap_content"
	android:orientation="vertical">
	<TextView android:id="@+id/place_name" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:maxLines="1"
		android:ellipsize="marquee" android:textColor="@android:color/black"
		android:textSize="20sp" />
	<TextView android:id="@+id/place_desc" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:maxLines="1"
		android:layout_alignParentLeft="true" android:ellipsize="marquee"
		android:textColor="@android:color/black" android:textSize="15sp" />
</LinearLayout> 